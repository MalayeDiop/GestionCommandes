@model GestionCommandes.Models.Produit

@{
    ViewData["Title"] = "Ajout de Produit";
}
<div class="container mx-auto px-4 py-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Ajouter un Produit</h1>

    <form method="post" class="bg-white p-6 shadow-md rounded-lg">
        <div class="mb-4">
            <label for="Libelle" class="block text-gray-700">Libellé</label>
            <input type="text" id="Libelle" name="Libelle" value="@Model.Libelle" class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:ring-teal-500" required />
        </div>

        <div class="mb-4">
            <label for="PrixUnitaire" class="block text-gray-700">Prix Unitaire</label>
            <input type="number" id="PrixUnitaire" name="PrixUnitaire" value="@Model.PrixUnitaire" class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:ring-teal-500" required />
        </div>

        <div class="mb-4">
            <label for="QteStock" class="block text-gray-700">Quantité en Stock</label>
            <input type="number" id="QteStock" name="QteStock" value="@Model.QteStock" class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:ring-teal-500" required />
        </div>

        <div class="mb-6">
            <button type="submit" class="bg-teal-600 text-white px-4 py-2 rounded-lg hover:bg-teal-700 transition duration-200">
                Ajouter
            </button>
        </div>
    </form>
</div>
