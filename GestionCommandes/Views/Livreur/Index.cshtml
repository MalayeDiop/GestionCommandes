@model IEnumerable<GestionCommandes.Models.Livreur>

@{
    ViewData["Title"] = "Liste des Livreurs";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="flex items-center justify-between mb-4">
        <h1 class="text-4xl underline font-bold text-gray-800 w-full text-center">Liste des Livreurs</h1>
    </div>

    <div class="mb-4 flex justify-between items-center"> 
        <form method="get" class="flex w-1/2">
            <input type="text" placeholder="Rechercher..." class="w-full p-2 border border-gray-300 rounded-l-lg focus:outline-none focus:ring focus:ring-teal-500" />
            <button type="submit" class="bg-teal-600 text-white px-4 rounded-r-lg hover:bg-teal-700 transition duration-200">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 10-14 0 7 7 0 0014 0z" />
                </svg>
            </button>
        </form>

    </div>

    <table class="table-auto border-collapse border border-black w-full text-left rounded-lg overflow-hidden">
        <thead>
            <tr class="bg-teal-700 text-white">
                <th class="border border-black px-4 py-2">Nom</th>
                <th class="border border-black px-4 py-2">Prénom</th>
                <th class="border border-black px-4 py-2">Téléphone</th>
                <th class="border border-black px-4 py-2">Disponibilité</th>
                <th class="border border-black px-4 py-2">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var livreur in Model)
            {
                <tr>
                    <td class="border border-gray-300 px-4 py-2">@livreur.Nom</td>
                    <td class="border border-gray-300 px-4 py-2">@livreur.Prenom</td>
                    <td class="border border-gray-300 px-4 py-2">@livreur.Telephone</td>
                    <td class="border border-gray-300 px-4 py-2">@livreur.isAvailable</td>
                    <td class="border border-gray-300 px-4 py-2">
                        <a href="@Url.Action("Details", "Livreur", new { id = livreur.Id })" class="text-blue-500">Détails</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
