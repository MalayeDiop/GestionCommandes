@model GestionCommandes.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css.style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/output.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-teal-900 flex items-center justify-center h-screen">
    <form asp-controller="Connexion" asp-action="Login" method="post"
        class="bg-white p-6 rounded-lg shadow-custom w-full max-w-sm">
        <h1 class="text-1xl font-bold text-center mb-6 text-gray-700">Bienvenue dans SenCommandes</h1>
        <h1 class="text-2xl font-bold text-center mb-6 text-gray-700">Identifiez-vous</h1>

        <div class="mb-4">
            <label for="login" class="block text-sm font-medium text-gray-600 mb-2">Login</label>
            <input type="text" id="login" placeholder="Entrez votre mail" asp-for="Login"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:ring-blue-200">
        </div>

        <div class="mb-6">
            <label for="password" class="block text-sm font-medium text-gray-600 mb-2">Password</label>
            <input type="password" id="password" placeholder="Entrez votre mot de passe" asp-for="Password"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:ring-blue-200">
        </div>

        @if (ViewData["ValidateMessage"] != null)
        {
            <div class="mb-4 text-red-500 text-sm">
                <label>@ViewData["ValidateMessage"]</label>
            </div>
        }

        <button type="submit"
            class="w-40 bg-teal-900 text-white py-1.5 px-3 rounded-lg hover:bg-teal-600 transition duration-200 block mx-auto">
            Se connecter
        </button>
    </form>
</body>

</html>